{{!< default}}
<div class="row">
  <main class="col m8">
    {{#post}}
    <article class="{{post_class}}">
      <div class="post-category">
        <h3>{{tags}}</h3>
      </div>
      <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class="post-meta">
          by {{author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD YYYY"}}</time>
        </div>
      </header>
      <div class="flow-text">
        {{content}}
      </div>
    </article>
    {{/post}}
  </main>

{{> sidebar}}

</div>
