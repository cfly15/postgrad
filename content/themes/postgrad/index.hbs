{{!< default}}

<div class="row">
  <main class="col m8">
    {{! This is the post loop - each post will be output using this markup }}
    {{#foreach posts}}
    <article class="{{post_class}}">
      <div class="post-category">
        <h3>{{tags}}</h3>
      </div>
      <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class="post-meta">
          by {{author}} on <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD YYYY"}}</time>
        </div>
      </header>
      <section class="post-excerpt">
        <p class="flow-text">{{excerpt words="65"}} <a class="read-more" href="{{url}}"> ... read more</a></p>
      </section>

    </article>
    {{/foreach}}
    {{! Previous/next page links - displayed on every page }}
    {{pagination}}
  </main>

  {{> sidebar}}

</div>
